<form class="profile-form" action="/profile/editPrivacy/{{username}}">
    <label for="privacy_setting">PRIVATE:</label>
    {{#if private}}
    <input type="checkbox" id="privacy_setting" class="privacy_setting" value="true" name="privacy_setting">
    {{else}}
    <input type="checkbox" id="privacy_setting" class="privacy_setting" value="false" name="privacy_setting">
    {{/if}}
    <button type="submit">Save</button>
</form>

<div id="response"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.profile-form').on('submit', function (event) {
            event.preventDefault();

            let action = $(this).attr('action'); 
             let formData = {};
        $(this).find('input, select').each(function() {
            formData[$(this).attr('name')] = $(this).val();
        });
            $.ajax({
                url: action,
                method: 'POST',
                data: formData,
                success:
                    function(response) {
                        location.reload();
                    },
                error: function(jqXHR, textStatus, errorThrown) {
                    $('#response').text(errorThrown);
                }
            });
        }); 
    });
</script>