<head>
    <link rel="stylesheet" href="/public/settings.css" />
</head>

<body>
    <header>
        <h1>Races Found</h1>
    </header>
    <main>
        <h2>{{search}}</h2>
        <ol>
            {{#each races}}
            <li>
                <a href="/race/{{_id}}">
                    <span>{{raceName}}<br></span>
                </a>
            </li>
            {{/each}}
        </ol>
        <a href="/">Search for Another Race</a>
        <a href="/race/addrace">Can't find your race? Click here to add it.</a>
    </main>
</body>
